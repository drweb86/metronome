<Window x:Class="Metronome.Windows.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Metronome#" Height="300" Width="300" WindowStartupLocation="CenterScreen" SizeToContent="WidthAndHeight"
        Icon="../Pictures/1453069499_Metronome.ico">
    <DataGrid AutoGenerateColumns="False" ItemsSource="{Binding Copyrights}" IsReadOnly="True">
        <DataGrid.Columns >
            <DataGridTextColumn Binding="{Binding Path=Source}" MinWidth="50" Header="Component" />
            <DataGridTextColumn Binding="{Binding Path=Author}" MinWidth="50" Header="Author" />
            <DataGridTextColumn Binding="{Binding Path=License}" MinWidth="50" Header="License" />
            <DataGridTextColumn Binding="{Binding Path=URL}" MinWidth="50" Header="URL" />
        </DataGrid.Columns>
    </DataGrid>
</Window>
