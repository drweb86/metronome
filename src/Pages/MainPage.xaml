<Page x:Class="Metronome.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Metronome.Pages"
      xmlns:converters="clr-namespace:Metronome.Converters"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Metronome"
      >
    <Page.DataContext>
        <local:MainPageViewModel />
    </Page.DataContext>
    <Page.Resources>
        <ResourceDictionary>
            <converters:DoubleToIntConverter x:Key="DoubleToIntConverter" />
            <converters:PercentsConverter x:Key="PercentsConverter" />
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Styles/WheatherStyleResourceDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    <Page.Background>
        <ImageBrush ImageSource="{StaticResource Page.MainPage.BackgroundImage}" Stretch="UniformToFill"/>
    </Page.Background>
    <Grid Margin="20 5 20 5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <Button Grid.Column="0"
                Grid.Row="1"
                Margin="50 50 50 50"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Width="120"
                Height="120"
                CommandParameter="{Binding}"
                Command="{Binding ExecuteMetronomeAsyncCommand}" 
                IsEnabled="{Binding StartMetronomeButtonEnabled}"
                >
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Name="border" BorderThickness="2" 
                        ToolTip="Start/Stop metronome">
                        <Grid>
                            <Ellipse />
                            <Image 
                                Opacity="{TemplateBinding Opacity}"
                                Source="{Binding StartMetronomeButtonImageUri}" 
                                ToolTip="Start/Stop metronome" 
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Button.Template>
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Opacity" Value="0.8" />
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Opacity" Value="1" />
                        </Trigger>
                        <Trigger Property="IsFocused" Value="True">
                            <Setter Property="Opacity" Value="1" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
                
            </Button.Style>
        </Button>


        <Label Grid.Row="0" Grid.Column="1"  
               Content="{Binding Volume, Mode=OneWay, Converter={StaticResource PercentsConverter}}" 
               Style="{StaticResource Page.MainPage.Label.Style}" 
               HorizontalAlignment="Center"
               ToolTip="Volume (%)"/>
        <Label Grid.Row="0" Grid.Column="2"  
               Content="{Binding DelayMseconds, Mode=OneWay, Converter={StaticResource DoubleToIntConverter}}"  
               Style="{StaticResource Page.MainPage.Label.Style}" 
               HorizontalAlignment="Center"
               ToolTip="Delay (milliseconds)"/>

        <Image Grid.Row="2" Grid.Column="1" 
               HorizontalAlignment="Center"
                Width="32" Height="32" 
                Source="../Pictures/1452998965_volume-70px.png" 
                ToolTip="Volume (%)"/>
        <Image Grid.Row="2" Grid.Column="2"
               HorizontalAlignment="Center"
                Width="32" Height="32" 
                Source="../Pictures/1452999134_Personal_trainer_1.png" 
                ToolTip="Delay (milliseconds)"/>
        
        <Slider Orientation="Vertical" 
                HorizontalAlignment="Center" 
                Grid.Row="1" Grid.Column="1" 
                Value="{Binding Volume}" 
                Minimum="0.01" 
                Maximum="1" 
                ToolTip="Volume (%)"/>
        <Slider Orientation="Vertical" 
                HorizontalAlignment="Center" 
                Grid.Row="1" Grid.Column="2"  
                Value="{Binding DelayMseconds}" 
                Minimum="1" 
                Maximum="4000" 
                ToolTip="Delay (milliseconds)"/>
            

    </Grid>
            
</Page>
